@model IEnumerable<SchoolAdminAPIconsuming.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Records";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Student ID</th>
            <th>Name</th>
            <th>Present</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Date.ToString("yyyy-MM-dd")</td>
                <td>@record.Student.StudentId</td>
                <td>@record.Student.StudentName</td>
                <td>@(record.IsPresent ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
