@model IEnumerable<SchoolAdminAPIconsuming.Models.Teacher>

@{
    ViewBag.Title = "Teacher List";
}

<h2>Teacher List</h2>

<p>
    <a asp-action="AddTeacher" class="btn btn-primary">Add New Teacher</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Qualification</th>
            <th>Email</th>
            <th>Hire Date</th>
            <th>Monthly Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Qualification</td>
                <td>@teacher.Email</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.MonthlySalary.ToString("C")</td>
                <td>
                    <a asp-action="EditTeacher" asp-route-id="@teacher.TeacherId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteTeacher" asp-route-id="@teacher.TeacherId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
