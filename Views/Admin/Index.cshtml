@model List<SchoolAdminAPIconsuming.Models.Student>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student List</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1>Student List</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Student Name</th>
                    <th>UserID</th>
                    <th>Parent Email</th>
                    <th>Fees Status</th>
                    <th>STD</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentId</td>
                            <td>@student.StudentName</td>
                            <td>@student.UserId</td>
                            <td>@student.Parent_Email</td>
                            <td>@student.FeesStatus</td>
                            <td>@student.STD</td>

                            <td>
                                <!-- Add action links here if needed -->
                                |
                                <a href="@Url.Action("EditStudent", "Admin", new { id = student.StudentId })">Edit</a>
                                |
                                <a href="@Url.Action("DeleteStudent", "Admin", new { id = student.StudentId })">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No students found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
